@model VnBookLibrary.Model.Entities.CategoryLv1

@{
    ViewBag.Title = "Sửa danh mục cấp 1 | VnBook";
    Layout = "~/Areas/Manage/Views/Shared/_LayoutManage.cshtml";
}

<h3>Sửa danh mục cấp 1</h3><hr />
<div class=" col-md-6">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CategoryLv1Id)

        <div class="form-group">
            @Html.LabelFor(model => model.CategoryLv1Name, htmlAttributes: new { @class = "control-label" })
            <div class="">
                @Html.EditorFor(model => model.CategoryLv1Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CategoryLv1Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OrderDisplay, htmlAttributes: new { @class = "control-label" })
            <div class="">
                @Html.EditorFor(model => model.OrderDisplay, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.OrderDisplay, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="">
                <input type="submit" value="Sửa" class="btn btn-success" />
            </div>
        </div>
    }
</div>
