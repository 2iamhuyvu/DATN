@model VnBookLibrary.Model.Entities.CategoryLv2

@{
    ViewBag.Title = "Thêm danh mục cấp 2 | VnBook";
    Layout = "~/Areas/Manage/Views/Shared/_LayoutManage.cshtml";
}

<h3>Thêm danh mục cấp 2</h3><hr />
<div class="col-md-6">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.CategoryLv2Name, htmlAttributes: new { @class = "control-label" })
            <div class="">
                @Html.EditorFor(model => model.CategoryLv2Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CategoryLv2Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CategoryLv1Id, "Chọn danh mục cấp 1 - Danh mục cha", htmlAttributes: new { @class = "control-label" })
            <div class="">
                <select id="CategoryLv1Id" name="CategoryLv1Id" class="form-control">
                    @{
                        var list = (SelectList)ViewBag.CategoryLv1Id;
                        foreach (var item in list)
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    }
                </select>
                @Html.ValidationMessageFor(model => model.CategoryLv1Id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="">
                <input type="submit" value="Thêm" class="btn btn-success" />
            </div>
        </div>
    }
</div>

