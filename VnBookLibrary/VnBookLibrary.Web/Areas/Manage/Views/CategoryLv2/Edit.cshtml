@model VnBookLibrary.Model.Entities.CategoryLv2

@{
    ViewBag.Title = "Sửa danh mục cấp 2 | VnBook";
    Layout = "~/Areas/Manage/Views/Shared/_LayoutManage.cshtml";    
}

<h2>Sửa danh mục cấp 2</h2>
<hr />
<div class="col-md-6">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CategoryLv2Id)

        <div class="form-group">
            @Html.LabelFor(model => model.CategoryLv2Name, htmlAttributes: new { @class = "control-label " })
            <div class="">
                @Html.EditorFor(model => model.CategoryLv2Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CategoryLv2Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CategoryLv1Id, "Danh mục cấp 1 - Danh mục cha", htmlAttributes: new { @class = "control-label " })
            <div class="">                              
                <select id="CategoryLv1Id" name="CategoryLv1Id" class="form-control UseSelect2">
                    @{
                        var list = (SelectList)ViewBag.CategoryLv1Id;
                        foreach (var item in list)
                        {
                            if (item.Value == Model.CategoryLv1Id.ToString())
                            {
                                <option value="@item.Value" selected>@item.Text</option>
                            }
                            else
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                        }
                    }
                </select>
                @Html.ValidationMessageFor(model => model.CategoryLv1Id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class=" ">
                <input type="submit" value="Sửa" class="btn btn-default" />
            </div>
        </div>

    }

</div>
