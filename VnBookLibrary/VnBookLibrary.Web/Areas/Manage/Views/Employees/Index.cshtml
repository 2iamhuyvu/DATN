@model IEnumerable<VnBookLibrary.Model.Entities.Employee>

@{
    ViewBag.Title = "Danh sách nhân viên | VnBook";
    Layout = "~/Areas/Manage/Views/Shared/_LayoutManage.cshtml";
}

<h3>Danh sách nhân viên <a style="float:right" href="@Url.Action("Create","Employees",new {area="Manage"})" class="btn btn-success btn-sm">Thêm nhân viên</a></h3>
<hr />
<table class="table table-bordered UseDataTables" id="TableEmployee">
    <thead>
        <tr>
            <th>Loại nhân viên</th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoginName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateBirth)
            </th>
            <th data-orderable="false">
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>Tình trạng</th>
            <th data-orderable="false">Khóa / Mở khóa</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EmployeeType.EmployeeTypeName</td>
                <td>
                    @item.EmployeeName
                </td>
                <td>
                    @item.LoginName
                </td>
                <td>
                    @item.Email
                </td>

                <td>
                    @item.DateBirth
                </td>
                <td>
                    @item.Phone
                </td>
                <td id_Employee="@item.EmployeeId" >@(item.IsBlock == true ? "Bị khóa" : "Hoạt động")</td>
                <td style="text-align:center">
                    @if (item.EmployeeType.IsAdministrator == false || item.EmployeeType.IsAdministrator == null)
                    {
                        if (item.IsBlock == false || item.IsBlock == null)
                        {
                            using (Ajax.BeginForm("BlockEmployee", "Employees", new { id = item.EmployeeId,IsBlock=true, Area = "Manage" }, new AjaxOptions()
                            {
                                OnSuccess = "SuccessBlockEmployee",
                                HttpMethod = "POST"
                            }, new { style = "display:inline-block" }))
                            {                                
                                <button type="submit" id_Employee="@item.EmployeeId" style="padding:0px;color:black;border:none;background: transparent" class="fa fa-lock fa-lg" title="Khóa tài khoản"> Khóa</button>
                            }
                        }
                        else
                        {
                            using (Ajax.BeginForm("BlockEmployee", "Employees", new { id = item.EmployeeId,IsBlock=false, Area = "Manage" }, new AjaxOptions()
                            {
                                OnSuccess = "SuccessBlockEmployee",
                                HttpMethod = "POST"
                            }, new { style = "display:inline-block" }))
                            {                                
                                <button type="submit" id_Employee="@item.EmployeeId" style="padding:0px;color:black;border:none;background: transparent" class="fa fa-unlock fa-lg" title="Mở khóa tài khoản"> Mở khóa</button>
                            }
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    function SuccessBlockEmployee(rs) {
        LoadTableEmployee();
        if (rs.Status == true) {           
            Lobibox.notify('success', {
                size: 'mini',
                rounded: true,
                delayIndicator: false,
                msg: rs.Message,
                sound: false,
            });
        }
        else {
            Lobibox.notify('warning', {
                size: 'mini',
                rounded: true,
                delayIndicator: false,
                msg: rs.Message,
                sound: false,
            });
        }
    }
    function LoadTableEmployee() {         
        $.ajax({
            url: '@Url.Action("_TableEmployee", "Employees", new { Area = "Manage" })',
            type: 'GET',
            dataType: 'html',            
            success: function (html) {
                $("#TableEmployee tbody").html(html)
            },            
        });
    }    
</script>
