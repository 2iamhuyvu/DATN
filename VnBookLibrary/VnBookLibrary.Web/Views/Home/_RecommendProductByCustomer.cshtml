@model List<VnBookLibrary.Model.Entities.Product>
@using System.Globalization;
<style>

    [data-slide="prev"] {
        margin-right: 10px;
    }
    #RecomendByCustomer .block2-overlay {
        display: none;
    }
    .centercss {
        display: flex;
        justify-content: center;
        align-items: center;
    }
</style>
<div class="container" id="RecomendByCustomer">
    <div style="">
        <div class="row">
            <div class="row">
                <div class="col-md-9">
                    <h4 style="color:red">
                        Có thể bạn quan tâm!
                    </h4>
                </div>
            </div>

            <div class="owl-carousel owl-theme" style="margin-top:20px;">
                @for (int j = 0; j < Model.Count() && j < 15; j++)
                {
                    <div class="item">
                        <div class="block2" style="box-shadow:#ccc 0px 0px 10px 3px;border-radius:5px;">
                            <div class="block2-img wrap-pic-w of-hidden pos-relative block2-labelnew">
                                <div style="height:150px;border-radius:3px 0px 0px 0px">
                                    <img height="100%" style="border-radius:3px 0px 0px 0px" src="@Model[j].AvatarLink" alt="@Model[j].ProductName">
                                </div>
                                <div class="block2-overlay trans-0-4">
                                    <a href="#" class="block2-btn-addwishlist hov-pointer trans-0-4">
                                        <i class="icon-wishlist icon_heart_alt" aria-hidden="true"></i>
                                        <i class="icon-wishlist icon_heart dis-none" aria-hidden="true"></i>
                                    </a>

                                    <div class="block2-btn-addcart w-size1 trans-0-4">
                                        <!-- Button -->
                                        <button type="button" onclick="AddToCart(@Model[j].ProductId)" class="flex-c-m size1 bg4 bo-rad-23 hov1 s-text1 trans-0-4">
                                            Thêm vào giỏ
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <div class="block2-txt p-t-20" style="background:#e9f96f4f;padding:5px 10px;overflow:auto">
                                <div style="height:30px;overflow:hidden">
                                    <a href='@Url.Action("DetailProduct","Home",new {id=Model[j].ProductId })' style="font-size:16px;font-weight:normal;color:#337ab7;font-weight:bold" title="@Model[j].ProductName">
                                        @Model[j].ProductName
                                    </a>
                                </div>
                                <div style="height:40px;">
                                    <span style="display:block;color:green;font-weight:normal">@Model[j].Price.ToString("c", new CultureInfo("vi-VN")) </span>
                                    @if (Model[j].CoverPrice > 0)
                                    {
                                        <span style="display:block;color:red;font-weight:normal;text-decoration:line-through">@((Model[j].CoverPrice ?? 0).ToString("c", new CultureInfo("vi-VN")))</span>
                                    }
                                </div>
                                <div style="margin-top:10px;">
                                    <a style="color:black" title="Xem chi tiết" href='@Url.Action("DetailProduct","Home",new {id=Model[j].ProductId })' class="btn btn-default"><i style="color:black" class="glyphicon glyphicon-eye-open fa-lg"></i> Xem</a>
                                    <button style="float:right" onclick="AddToCart(@Model[j].ProductId)" class="btn btn-danger" title="Thêm vào giỏ" type="button"><i class="fa fa-cart-plus fa-lg" style="color:greenyellow"></i></button>
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<div class="clearfix"></div>
<hr />
<script>
    $(document).ready(function () {        
        $('.owl-carousel').owlCarousel({
            loop: true,
            margin: 20,
            nav: true,            
            responsive: {
                0: {
                    items: 1
                },
                320: {
                    items: 2
                },
                768: {
                    items: 3
                },
                890: {
                    items: 4
                },
                1024: {
                    items: 6
                }
            },
            autoplay: true,
            autoplayTimeout: 2500,
            autoplayHoverPause: true,
        })
        $(".owl-nav").addClass("centercss");
        $(".owl-nav button span").addClass("btn btn-success fa-lg").css("margin", "10px");
    })
</script>